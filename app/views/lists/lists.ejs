<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
  crossorigin="anonymous"></script>
<script src="https://unpkg.com/popper.js@1.12.6/dist/umd/popper.js" integrity="sha384-fA23ZRQ3G/J53mElWqVJEGJzU0sTs+SvzG8fXVWP+kJQ1lwFAOkcUOysnlKJC33U"
  crossorigin="anonymous"></script>
<script src="https://unpkg.com/bootstrap-material-design@4.1.1/dist/js/bootstrap-material-design.js" integrity="sha384-CauSuKpEqAFajSpkdjv3z9t8E7RlpJ1UP0lKM/+NdtSarroVKu069AlsRPKkFBz9"
  crossorigin="anonymous"></script>
<script>$(document).ready(function () { $('body').bootstrapMaterialDesign(); });</script>

<body>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid">
        <a href="/" class="navbar-brand">
          <img class="img-fluid" src="../images/foo-logo-marketize.png" alt="Marketize">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
          aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle Navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/myaccount">Minha Conta</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/mylists">Minhas Listas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contato</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>
  <div class="foo-padding container">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="card" style="width: 18rem;">
          <div class="card-header">
            Minha lista de compras
          </div>
          <ul class="wishlist list-group list-group-flush">

          </ul>
          <button type="submit" class="btn-form btn-save-list">Salvar lista</button>
        </div>
      </div>
      <div class="col-12 col-md-6 add-item-form">
        <h2 class="title">Novo produto</h2>
        <form>
          <div class="form-group">
            <label for="inputNameItem">Nome do produto</label>
            <input type="text" class="form-control" id="inputNameItem" placeholder="Exemplo: Café, Arroz, Sorvete">
          </div>
          <div class="form-group">
            <label for="inputQtdItem">Quantidade</label>
            <input type="number" class="form-control" id="inputQtdItem">
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="typeItem" id="radioKg" value="kg(s)">
            <label class="form-check-label" for="radioKg">
              Kg
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="typeItem" id="radioPackage" value="pacote(s)">
            <label class="form-check-label" for="radioPackage">
              Pacote
            </label>
          </div>
          <button type="button" class="btn-form btn-add-item">Adicionar</button>
        </form>
      </div>
    </div>

  </div>
  </div>
  <footer class="foo">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-5 brand">
          <img src="../images/lettering-marketize.png" alt="Marketize">
          <span>® 2018 Todos os direitos reservados.</span>
        </div>
        <div class="col-12 col-md-5">
          <nav class="menu-footer">
            <h5 class="title-footer">Mapa do site</h5>
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="#">Minha Conta</a></li>
              <li><a href="#">Minhas listas</a></li>
              <li><a href="#">Contato</a></li>
            </ul>
          </nav>
        </div>
        <div class="col-12 col-md-2">
          <div class="social-icons">
            <a class="social-link" href="https://www.facebook.com/marketizeapp" title="Facebook" target="_blank">
              <img src="../images/icons/icon-facebook.png" alt="Facebook">
            </a>
            <a class="social-link" href="https://www.instagram.com/marketizeapp/" title="Instagram" target="_blank">
              <img src="../images/icons/icon-instagram.png" alt="Instagram">
            </a>
          </div>
        </div>
      </div>
    </div>
  </footer>

  <script src="../scripts/manageList.js"></script>
</body>

</html>